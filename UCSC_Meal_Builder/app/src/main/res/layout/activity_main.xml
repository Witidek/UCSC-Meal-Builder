<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Welcome to UCSC MealBuilder App!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Build A Meal"
        android:id="@+id/buildMealButton"
        android:onClick="onClickBuildMeal"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Balance"
        android:id="@+id/balanceButton"
        android:onClick="onClickBalance"
        android:layout_below="@+id/buildMealButton"
        android:layout_alignLeft="@+id/buildMealButton"
        android:layout_alignStart="@+id/buildMealButton"
        android:layout_alignRight="@+id/buildMealButton"
        android:layout_alignEnd="@+id/buildMealButton"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Favorites"
        android:id="@+id/favoritesButton"
        android:onClick="onClickFavorites"
        android:layout_below="@+id/balanceButton"
        android:layout_alignLeft="@+id/balanceButton"
        android:layout_alignStart="@+id/balanceButton"
        android:layout_alignRight="@+id/balanceButton"
        android:layout_alignEnd="@+id/balanceButton"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Brought to you by : Team Champ"
        android:id="@+id/textView5"
        android:layout_below="@+id/favoritesButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The Champ is Here!"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
