<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sam.ucsc_meal_builder" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ok"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:layout_centerHorizontal="true">
        <activity
            android:name=".MainActivity"
            android:label="UCSC Meal Builder"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BudgetActivity"
            android:label="Budget"
            android:parentActivityName=".MainActivity"
            android:icon="@mipmap/home"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".BudgetActivity2"
            android:label="Budget"
            android:parentActivityName=".MainActivity"
            android:icon="@mipmap/home"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".RestaurantActivity"
            android:label="Restaurants"
            android:parentActivityName=".MainActivity"
            android:icon="@mipmap/home"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".BalanceActivity"
            android:label="Balance"
            android:parentActivityName=".MainActivity"
            android:icon="@mipmap/home"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="Menu"
            android:parentActivityName=".MainActivity"
            android:icon="@mipmap/home"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".CartActivity"
            android:label="Cart"
            android:parentActivityName=".MainActivity"
            android:icon="@mipmap/home"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".FavoriteActivity" >
        </activity>
    </application>

</manifest>
